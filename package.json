{
  "name": "@xivdyetools/test-utils",
  "version": "1.0.2",
  "description": "Shared testing utilities for the xivdyetools ecosystem",
  "author": "XIV Dye Tools",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cloudflare": {
      "types": "./dist/cloudflare/index.d.ts",
      "import": "./dist/cloudflare/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./factories": {
      "types": "./dist/factories/index.d.ts",
      "import": "./dist/factories/index.js"
    },
    "./dom": {
      "types": "./dist/dom/index.d.ts",
      "import": "./dist/dom/index.js"
    },
    "./assertions": {
      "types": "./dist/assertions/index.d.ts",
      "import": "./dist/assertions/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "vitest": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": false
    }
  },
  "dependencies": {
    "@xivdyetools/types": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@testing-library/dom": "^10.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "xivdyetools",
    "testing",
    "vitest",
    "cloudflare-workers",
    "mocks",
    "test-utils"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xivdyetools/xivdyetools-test-utils.git"
  }
}
